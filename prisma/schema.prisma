generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(cuid())
  email             String   @unique
  name              String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  securityScans     SecurityScan[]
  securityTodos     SecurityTodo[]
}

model SecurityScan {
  id              String   @id @default(cuid())
  userId          String
  overallScore    Int      // 0-100 security score
  emailAnalyzed   Boolean  @default(false)
  breachCheckDone Boolean  @default(false)
  twoFaChecked    Boolean  @default(false)
  passwordScore   Int?     // 0-100 for password analysis
  breachCount     Int?     // Number of breaches found
  twoFaEnabled    Boolean  @default(false)
  scanData        Json?    // Store detailed scan results
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SecurityTodo {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String
  priority    String   // 'high', 'medium', 'low'
  completed   Boolean  @default(false)
  category    String   // 'password', '2fa', 'breach', 'general'
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}